<%= link_to 'Catalogo', products_path, class:'btn-index' %>
<% if current_user.admin? %>
  <%= link_to 'Agregar Producto', new_product_path, class:'btn-index' %>
<% end %>


<div class="show-container">

  
    <% if @product.photos.any? %>
      <% @product.photos.each_with_index do |photo, n| %>
      <% end %>
      <div class="carousel-inner carousel-container">
        <div class="carousel-item active carousel-img-container">
          <%= cl_image_tag @product.photos.first.key %>
        </div>
        <% @product.photos.drop(1).each do |photo| %>
          <div class="carousel-item carousel-img-container">
            
              <%= cl_image_tag photo.key, class: "d-block w-100", style: 'height:400px'  %>
            
          </div>
        <% end %>
      <%else%>        
        <img , class="card-img-top", src="https://source.unsplash.com/random" alt="Card image cap">
      <%end%>
    </div>      


  <div class="show-text-container">
    <div style='margin-top:30px'>
      <h4 style='font-size: xx-large; text-align:center; font-family: Satisfy;'><%= @product.title %></h4>
    </div>
    <h4 class="border-bottom">Precio</h4>
      <p><%= @product.price %> $</p>
    <h4 class="border-bottom">Dimensiones</h4>
      <p><%= @product.dimensions %></p> 
    <h4 class="border-bottom">Antiguedad</h4>
      <p><%= @product.age %></p> 
    <h4 class="border-bottom">Informacion</h4>
      <p><%= @product.description %></p>
      
    <% if current_user.admin? %>
      <div class="button-container", style='margin-top: 40px; text-align: center;'>
        <%= link_to 'Modifica el Producto', edit_product_path(@product.id), class:'btn-small' %>
        <%= link_to "Borrar Producto", product_path(@product), method: "delete", class: "btn-small", data: { confirm: "Are you sure?" }, style:'margin-top: 20px; margin-left: 20px;' %>
      </div>
    <% end %>
    <h5 style='margin-top:100PX'>Todos los objetos seran desinfectados antes de la entrega</h5>
  </div>

</div>